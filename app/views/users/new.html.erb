
<div class="login_box">

<p>Sign up:</p>

<%= form_for @user do |f| %>
    <div class='error_messages'>
        <%= @user.errors.full_messages.first if @user.errors.any? %>
    </div>
    <p>
        <%= f.label 'email', 'Email address:' %>
        <%= f.text_field 'email' %>
    </p>

    <p>
        <%= f.label 'password', 'Password:' %>
        <%= f.password_field 'password' %>
    </p>

    <p>
        <%= f.label 'password_confirmation', 'Retype password:' %>
        <%= f.password_field 'password_confirmation' %>
    </p>

    <p>I am a:
        <%= f.radio_button :role, 'professional' %>
        <%= f.label :role_volunteer, 'Professional' %>
        <%= f.radio_button :role, 'npo' %>
        <%= f.label :role_npo, 'Non-Profit Organization' %>
    </p>
    <p>
        <%= f.submit 'Sign up' %>
    </p>


<% end %>

<p>Or sign in:</p>

<%= form_tag '/sessions' do %>

    <p>
        <%= label_tag 'email', 'Email address:' %>
        <%= text_field_tag 'email' %>
    </p>

    <p>
        <%= label_tag 'password', 'Password' %>
        <%= password_field_tag 'password' %>
    </p>

<p>
        <%= submit_tag 'Sign in' %>
    </p>

<% end %>

<p>Forgot password?</p>
<%= render 'forgot_password_form' %>

<p>Or <%= link_to 'Log in with Facebook', auth_at_provider_path(provider: :facebook) %> </p>

<p>Or <%= link_to 'Log in with LinkedIn', auth_at_provider_path(provider: :linkedin) %> </p>

</div>