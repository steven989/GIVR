
<%= render @project %>
<% if current_user %>
    <% if current_user.role == 'professional' %>
        <%= link_to 'Apply', project_applications_path(@project, todo: 'apply'), class: 'do_project', data: {todo: 'apply'}, method: 'POST' %>
        <%= link_to 'Shortlist', project_applications_path(@project, todo: 'shortlist'), class: 'do_project', data: {todo: 'shortlist'}, method: 'POST' %>
    <% end %>
<% end %>
<div class='fb-like' data-href='<%= @project %>' data-width='50' data-layout='button_count' data-action='like' data-show-faces='false' data-share='false'></div>
<%= link_to 'Back', projects_path %>
<span id='view_closed' data-viewpath='<%= j project_view_path(@view) %>'></span>