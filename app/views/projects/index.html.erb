<%= render 'shared/alt_header' %>
<%= render 'shared/alt_static' %>

<div class="projects_search">

  <ul class="search_bar">FIND A PROJECT

    <li>
      <div class="clickable clickable_clicked" id="add-new"><%= link_to "Add New", '/projects/new' %></div>
    </li>

    <li>
      <ul>
        <div class="clickable clickable_clicked" id="category_search">CATEGORY</div>
        <div class="lis" id="show_by_default">
          
          <% @categories.each do |category| %>
          
            <%= link_to filter_projects_path do %>
              <li class="filter_button filter_on" data-filterid=<%= category.id %> data-filtertype ="category" data-on=1><%= category.category %></li>
            <% end %>
          <% end %>

        </div>
      </ul>
    </li>
    
    <li>
      <ul>
        <div class="clickable" id="cause_search">CAUSE</div>
        <div class="lis">
          <% @causes.each do |cause| %>
          
            <%= link_to filter_projects_path do %>
              <li class="filter_button filter_on" data-filterid=<%= cause.id %> data-filtertype = "cause" data-on=1><%= cause.cause %></li>
            <% end %>
          <% end %>
        </div>
      </ul>
    </li>

    <li>        
      <ul>
        <div class="clickable" id="location_search">LOCATION</div>
        <div class="lis">

          <% @locations.each do |location| %>
            <%= link_to filter_projects_path do %>
              <li class="filter_button filter_on" data-filterid=<%= location.id %> data-filtertype = "location" data-on=1 ><%= location.location %></li>
            <% end %>
          <% end %>

        </div>
      </ul>
    </li>
  </ul>
</div>

<div class="projects_show">
  <%= render @projects %>
</div>

<div class="projects_detail hidden">
  <%= link_to "close", projects_url %>
</div>

<div class="pagination"><%= paginate @projects %></div>