                        <%= label_tag :role_npo, 'Non-Profit Organization' %>
                    </div>
                </div>
                <div class="field">
                    <div class="ui radio checkbox">
                        <%= radio_button_tag :role, 'business' %>
                        <%= label_tag :role_business, 'Business' %>
                    </div>
                </div>
                <div class="field">
                    <div class="ui radio checkbox">
                        <%= radio_button_tag :role, 'other' %>
                        <%= label_tag :role_other, 'Other' %>
                    </div>
                </div>
            </div>
            <div class="field category_input hidden">
