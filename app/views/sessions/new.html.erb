
<div class="login_box">
<%= form_tag '/sessions' do %>

    <p>
        <%= label_tag 'email', 'Email address:' %>
        <%= text_field_tag 'email' %>
    </p>

    <p>
        <%= label_tag 'password', 'Password' %>
        <%= password_field_tag 'password' %>
    </p>

    <p>
        <%= submit_tag 'Sign in' %>
    </p>

<% end %>
</div>