<div class="ui form segment profile_form">
  <%= form_for [@application.project, @application], :remote => true do |f| %>
    <div class="field">
      <p class='section_title'><%= f.label :project_id, 'Project ID' %></p>
      <p><%= f.text_field :project_id, class:'text_field' %></p>
    </div>
    <div class="field">
      <p class='section_title'><%= f.label :user_id, 'User ID' %></p>
      <p><%= f.text_field :user_id, class:'text_field' %></p>
    </div>
    <div class="field">
      <p class='section_title'><%= f.label :status, 'Current status' %></p>
      <p><%= f.text_field :status, class:'text_field' %></p>
    </div>
    <div class="field">
      <p class='section_title'><%= f.label :notification_view_flag, 'Notification to' %></p>
      <p><%= f.text_field :notification_view_flag, class:'text_field' %></p>
    </div>
    <div class="field">
      <p class='section_title'><%= f.label :message, 'Message' %></p>
      <p><%= f.text_area :message, class:'text_area' %></p>
    </div>
    <div class="actions">
      <%= f.submit class: 'submit mini ui givrgreen button' %>
    </div>
  <% end %>
</div>